doctype html
html(lang="en")
    head
        include templates/header
    body.login
        .contenedorFormulario
            h1 #{nombrePagina}

            if locals.mensajes
                .alertas
                    each categoria in Object.keys(locals.mensajes)
                        each error in mensajes[categoria]
                            .alerta(class=`${categoria}`)
                                p= error
            form#formulario.caja.cajaLogin(method="POST" action="/crearCuenta")
                .campo
                    label(for="email") E-mail:
                    input(type="email" name="email" placeholder="Tu email" value= email)
                .campo
                    label(for="password") E-mail:
                    input(type="password" name="password" placeholder="Tu password" value= password)
                .campo.enviar
                    input(type="submit", value="Crear Cuenta")
                .campo
                    a(href="/iniciarSesion") Volver a iniciar sesi√≥n
        script(src="/dist/bundle.js")